<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaskCenter Calendar</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link rel="stylesheet" href="/stylesheets/calendar_styles.css">
</head>
<body>
    <div class="tc-container">
        <header class="tc-header">
            <nav class="tc-nav">
                <ul>
                    <li><a href="/help">Help</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
            <h1 class="tc-title">TaskCenter</h1>
        </header>
        <main class="tc-main">
            <div class="tc-calendar-title-box">
                <h2 id="currentCalendarName">My Calendar</h2>
                <button id="shareCalendarBtn">Share</button>
            </div>
            <div class="tc-calendar-wrapper">
                <div class="tc-calendar-container">
                    <div class="tc-month-navigation">
                        <span class="tc-prev-month">◀</span>
                        <div class="tc-month-year">Loading...</div>
                        <span class="tc-next-month">▶</span>
                    </div>
                    <div class="tc-weekdays">
                        <div>Sun</div>
                        <div>Mon</div>
                        <div>Tue</div>
                        <div>Wed</div>
                        <div>Thu</div>
                        <div>Fri</div>
                        <div>Sat</div>
                    </div>
                    <div class="tc-days">
                        <!-- Days will be generated by JavaScript -->
                    </div>
                </div>
                <aside class="tc-task-details">
                    <h2>Tasks</h2>
                    <ul class="tc-task-list" id="taskList">
                        <!-- Tasks will be added here dynamically -->
                    </ul>
                    <button id="deleteTaskBtn">Delete Task</button>
                </aside>
            </div>
            <div id="addTaskModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <form id="addTaskForm">
                        <label for="taskName">Task Name:</label>
                        <input type="text" id="taskName" placeholder="Task Name" required>
                        <label for="taskDate">Due Date:</label>
                        <input type="date" id="taskDate" required>
                        <label for="taskTime">Due Time:</label>
                        <input type="time" id="taskTime" required>
                        <input type="submit" value="Add Task">
                    </form>
                </div>
            </div>
        </main>
        <footer class="tc-footer">
        </footer>
    </div>

    <!-- Left Floating Action Container for Calendar Selection -->
    <div class="left-floating-action-container">
        <div class="tc-calendar-select">
            <select id="calendarSelect">
                <option value="My Calendar">My Calendar</option>
                <!-- Other calendars will be added here dynamically -->
            </select>
            <button id="createCalendarBtn">Create New Calendar</button>
            <button id="deleteCalendarBtn" style="display:none;">Delete Current Calendar</button>
        </div>

        <!-- Shared Calendar Selection -->
        <div class="tc-shared-calendar-select">
            <label id="SaredCalendarList"> Calendars ahared with you:  </label>
            <select id="sharedCalendarSelect">
                <option value="Shared Calendar 1">Shared Calendar 1</option>
                <!-- Other shared calendars will be added here dynamically -->
            </select>
        </div>
    </div>

    <!-- Right Floating Action Container for Add Task Button -->
    <div class="right-floating-action-container">
        <div class="tc-add-task-button" id="addTaskBtn">
            <span>+</span>
        </div>
    </div>
    <script src="/scripts/calendar_script.js"></script> 
</body>
</html>
